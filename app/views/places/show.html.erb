<h1><%= @place["name"] %></h1>

<ul>
  <% for entry in @entries %>
    <% if entry["place_id"] == @place["id"] %>
      <li>
        <p><strong><%= entry["title"] %></strong></p>
        <p><%= entry["occurred_on"] %></p>
        <p><%= entry["description"] %></p>
      </li>
    <% end %>
  <% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p>
  <a href="/places">Back to Places</a>
</p>